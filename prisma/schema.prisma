generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// usersモデル
model User {
  user_id Int @id @default(autoincrement())
  user_name String
  e_mail String @unique
  age String
  student Boolean
  created_at DateTime @updatedAt
  updated_at DateTime @updatedAt
}

// screenモデル
model Screen {
  screen_id Int @id @default(autoincrement())
  screen_capacity Int
  movie_id Int
}