generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// usersモデル
model User {
  user_id Int @id @default(autoincrement())
  user_name String
  e_mail String @unique
  password String
  age String
  student Boolean
  created_at DateTime @updatedAt
  updated_at DateTime @updatedAt

  // 外部キー設定
  cash Cash?
  reservation Reservation?
}

// screenモデル
model Screen {
  screen_id Int @id @default(autoincrement())
  screen_capacity Int
  movie_id Int

  // 外部キー設定
  movie Movie @relation(fields: [movie_id], references: [movie_id])
  seats Seat[]
  reservation Reservation?
}

// reservationモデル
model Reservation {
  reservation_id Int @id @default(autoincrement())
  screen_id Int @unique
  movie_id Int @unique
  seat_id Int @unique
  user_id Int @unique

  // 外部キー設定
  user User @relation(fields: [user_id], references: [user_id])
  movie Movie @relation(fields: [movie_id], references: [movie_id])
  seat Seat @relation(fields: [seat_id], references: [seat_id])
  screen Screen @relation(fields: [screen_id], references: [screen_id])
}

// movieモデル
model Movie {
  movie_id Int @id @default(autoincrement())
  movie_name String
  movie_detail String
  movie_time Int // 単位はどうする？
  category_id Int

  // 外部キー設定
  category Category @relation(fields: [category_id], references: [category_id])
  screens Screen[]
  cash Cash?
  reservations Reservation?
}

// Seatモデル
model Seat {
  seat_id Int @id @default(autoincrement())
  // number管理だと厳しい？
  seat_width Int
  seat_height Int
  movie_start DateTime
  screen_id Int

  // 外部キー設定
  screen Screen @relation(fields: [screen_id], references: [screen_id])
  reservation Reservation?
}

// cashmethodモデル
model CashMethod {
  method_id Int @id @default(autoincrement())
  method String

  // 外部キー設定
  cashes Cash?
}

// priceモデル
model Price {
  price_id Int @id @default(autoincrement())
  price Int
  //↓学割
  school_type Int 
  
  // 外部キー設定
  cashes Cash?
}

// categoryモデル
model Category {
  category_id Int @id @default(autoincrement())
  category_name String

  // 外部キー設定
  movies Movie[]
}

// cashモデル
model Cash {
  cash_id Int @id @default(autoincrement())
  movie_id Int @unique
  price_id Int @unique
  user_id Int @unique
  method_id Int @unique

  // 外部キー設定
  user User @relation(fields: [user_id], references: [user_id])
  movie Movie @relation(fields: [movie_id], references: [movie_id])
  method CashMethod @relation(fields: [method_id], references: [method_id])
  price Price @relation(fields: [price_id], references: [price_id])
}
