generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// usersモデル
model User {
  user_id Int @id @default(autoincrement())
  user_name String
  e_mail String @unique
  age String
  student Boolean
  created_at DateTime @updatedAt
  updated_at DateTime @updatedAt
}

// screenモデル
model Screen {
  screen_id Int @id @default(autoincrement())
  screen_capacity Int
  movie_id Int
}

// movieモデル
model Movie {
  movie_id Int @id @default(autoincrement())
  movie_name String
  movie_detail String
  movie_time Int // 単位はどうする？
  category_id Int
}

// Seatモデル
model Seat {
  seat_id Int @id @default(autoincrement())
  // number管理だと厳しい？
  seat_width Int
  seat_height Int
  movie_start DateTime
  screen_id Int
}

// cashmethodモデル
model cashmethod {
  method_id Int @id @default(autoincrement())
  method String
}

// priceモデル
model price {
  price_id Int @id @default(autoincrement())
  price Int
  //↓学割
  schol_type Int 
}

//categoryモデル
model category {
  category_id Int @id @default(autoincrement())
  category_name String
}

//cashモデル
model cash {
  cash_id Int @id @default(autoincrement())
  movie_id Int
  price_id Int
  id Int
  method_id Int
}
